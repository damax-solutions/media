{
  "name": "damax/media",
  "type": "library",
  "description": "Media management.",
  "license": "MIT",
  "autoload": {
    "psr-4": { "Damax\\Media\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Damax\\Media\\Tests\\": "tests/" }
  },
  "require": {
    "php": ">=7.1",
    "beberlei/assert": "^2.9",
    "damax/common": "1.3.*@dev",
    "ramsey/uuid": "^3.7",
    "symfony/http-foundation": "^4.0"
  },
  "require-dev": {
    "doctrine/orm": "^2.6",
    "friendsofphp/php-cs-fixer": "^2.10",
    "knplabs/gaufrette": "^0.6.0",
    "league/flysystem": "^1.0",
    "league/glide-symfony": "^1.0",
    "league/tactician": "^1.0",
    "matthiasnoback/symfony-dependency-injection-test": "^3.0",
    "nelmio/api-doc-bundle": "^3.2",
    "php-coveralls/php-coveralls": "^2.1",
    "simple-bus/message-bus": "^3.0",
    "symfony/framework-bundle": "^4.1",
    "symfony/phpunit-bridge": "^4.0",
    "symfony/validator": "^4.0",
    "twig/twig": "^2.4"
  },
  "scripts": {
    "cs": "php-cs-fixer fix",
    "test": "simple-phpunit",
    "test-cc": "./bin/phpunit-coverage",
    "test-ci": "simple-phpunit --coverage-clover=build/logs/clover.xml",
    "test-publish": "php-coveralls"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0-dev"
    }
  }
}
